<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.faircorp">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Faircorp2">
        <activity
            android:name=".activity.window.WindowsActivity"
            android:parentActivityName=".activity.MainActivity"/>
        <activity
            android:name=".activity.heater.HeatersActivity"
            android:parentActivityName=".activity.MainActivity"/>
        <activity
            android:name=".activity.room.RoomsActivity"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.room.RoomWindowsActivity"
            android:parentActivityName=".activity.room.RoomsActivity" />
        <activity
            android:name=".activity.room.RoomHeatersActivity"
            android:parentActivityName=".activity.room.RoomsActivity" />
        <activity
            android:name=".activity.window.WindowActivity"
            android:parentActivityName=".activity.window.WindowsActivity" />
        <activity
            android:name=".activity.room.RoomWindowActivity"
            android:parentActivityName=".activity.room.RoomsActivity" />
        <activity
            android:name=".activity.room.RoomHeaterActivity"
            android:parentActivityName=".activity.room.RoomsActivity" />
        <activity
            android:name=".activity.heater.HeaterActivity"
            android:parentActivityName=".activity.heater.HeatersActivity" />
        <activity
            android:name=".activity.room.RoomActivity"
            android:parentActivityName=".activity.room.RoomsActivity" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>